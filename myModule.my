
def QBEven(num):
    """
    Query on even number:
    RETURNS a boolean output for an as integer": true if even number, otherwise false"""
    return num % 2 == 0


def Factorial(x):
    if x == 0:
        return 1
    else:
        return (x) * Factorial(x-1)
    

